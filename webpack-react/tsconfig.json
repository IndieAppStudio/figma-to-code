{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "target": "ES2015",
    "module": "ES6",
    // "lib": ["ES2015", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "node_modules/@figma"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "sourceMap": true
  },
  "exclude": ["dist", "node_modules", ".cache", ".cache-loader", ".next", "chrome-extension"]
}