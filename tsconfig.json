{
  "compilerOptions": {
  "outDir": "dist",
  "declarationDir": "dist",
  "target": "ES5",
  "module": "ES6",
  "lib": ["ES5", "DOM"],
  "jsx": "react-jsx",
  "strict": true,
  "declaration": true,
  "experimentalDecorators": true,
  "typeRoots": ["node_modules/@types", "node_modules/@figma"],
  "allowSyntheticDefaultImports": true,
  "moduleResolution": "Node",
  "skipLibCheck": true,
  "strictNullChecks": false,
  "sourceMap": true
  },
  "exclude": ["dist", "node_modules", ".cache", ".cache-loader", ".next", "chrome-extension"]
}