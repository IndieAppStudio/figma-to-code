{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "target": "es6",
    "lib": ["es2016", "dom"],
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "node_modules/@figma"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules", ".cache", ".cache-loader", ".next", "chrome-extension"]
}